<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".Sonuc">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:srcCompat="@drawable/odevlogo" />

    <TextView
        android:id="@+id/textcorba"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        android:textSize="28sp"
        android:text=""
        android:gravity="center"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        android:textSize="28sp"
        android:text="İçinde"
        android:layout_marginTop="24dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/textswitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        android:textSize="24sp"
        android:text=""
        android:layout_marginTop="24dp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        android:textSize="28sp"
        android:text="Olsun"
        android:layout_marginTop="28dp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/textekstralar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        android:textSize="28sp"
        android:text="Ekstra İstek:"
        android:layout_marginTop="28dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/btnyenisiparis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yeni Sipariş"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/black"
        android:textSize="16sp"/>

    <ImageButton
        android:id="@+id/imgbtncikis"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/redexit"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"/>

</LinearLayout>